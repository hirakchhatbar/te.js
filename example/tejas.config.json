{
  "port": 1403,
  "log": {
    "http_requests": true,
    "exceptions": true
  },
  "dir": {
    "targets": "targets"
  },
  "body": {
    "max_size": 5242880,
    "timeout": 15000
  },
  "db": {
    "mongodb": {
      "uri": "mongodb://localhost:27017/myapp",
      "options": {
        "useNewUrlParser": true,
        "useUnifiedTopology": true
      }
    },
    "redis": {
      "url": "redis://localhost:6379",
      "options": {
        "password": "optional-password"
      }
    }
  }
}
